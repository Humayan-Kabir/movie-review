<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('head'); -%>
  </head>
  <body>
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
                <a class="navbar-brand" href="/login" style="color: white;">Movie Review</a>
                <ul class="navbar-nav ml-auto">
                    <li>
                            <a href="/register" style="color: white;">Sign Up</a>
                    </li>
                    
                </ul>
        </nav>
    <div style="margin-bottom: 2cm;"></div>
    <div class="container">
      <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">


        <div class="alert alert-success alert-dismissible collapse text-center" id="loginAlert">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <span id="loginAlertText"></span>
        </div>

          <div class="card">
            <div class="card-header">Login</div>
            <div class="card-body">
              <form action="/login" method="post">
                <div class="form-group">
                  <label for="email">Email</label>
                  <input type="email" class="form-control" name="email" required>
                </div>
                <div class="form-group">
                  <label for="password">Password</label>
                  <input type="password" class="form-control" name="password" required>
                </div>
                <div class="form-group">
                  <button type="submit" class="btn btn-primary form-control">Login</button>
                </div>
              </form>
            </div>
          </div>
        </div>
        <div class="col-md-3"></div>
      </div>
    </div>



    <script text="text/javascript">
      var urlParams = new URLSearchParams(window.location.search);
      
      if(urlParams.get('status') == "incorrect") {
         //console.log('within if clause');
      
          $('#loginAlertText').text('Incorrect Credential');
          $('#loginAlert').show();
      
      }
      
      
      
      </script>
  </body>
</html>