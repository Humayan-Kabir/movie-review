<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('head'); -%>
</head>

<body>
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
                <a class="navbar-brand" href="/login" style="color: white;">Movie Review</a>
                <ul class="navbar-nav ml-auto">
                    <li>
                            <a href="/login" style="color: white;">Sign In</a>
                    </li>
                    
                </ul>
        </nav>
<div style="margin-bottom: 2cm;"></div>

<div class="container">
    <div class="row">
        <div class="col-md-3"></div>

        <div class="col-md-6">
                <div class="alert alert-success alert-dismissible collapse text-center" id="registerAlert">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <span id="registerAlertText"></span>
                </div>
            <div class="card">
                    
                <div class="card-header">Register</div>
                <div class="card-body">
                  <form action="" method="post">
                      <div class="form-group">
                          <label for="username">Username</label>
                          <input type="text" class="form-control" name="username" required>
                      </div>

                      <div class="form-group">
                          <label for="email">Email</label>
                          <input type="email" class="form-control" name="email" required>
                      </div>

                      <div class="form-group">
                          <label for="password">Password</label>
                          <input type="password" class="form-control" name="password" required>
                      </div>

                      <!-- <div class="form-group">
                            <label for="confirmPassword">Confirm Password</label>
                            <input type="password" class="form-control" name="confirmPassword" required>
                      </div> -->

                     

                      <div class="form-group">
                          <button class="btn btn-primary form-control">Register</button>
                      </div>
                  </form>
                </div>
            </div>
        </div>

        <div class="col-md-3"></div>

    </div>
</div>

<script text="text/javascript">
var urlParams = new URLSearchParams(window.location.search);

if(urlParams.get('status') == "success") {

    $('#registerAlertText').text('Congatulations! Registration is complete.');
    $('#registerAlert').show();

}

if(urlParams.get('status') == "email-already-used") {
    $('#registerAlertText').text('This email has already been used by someone');
    $('#registerAlert').show();

}



</script>


</body>
</html>
